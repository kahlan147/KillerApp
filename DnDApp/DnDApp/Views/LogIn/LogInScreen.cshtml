@model DnDApp.Models.AppUser
@{
    ViewBag.Title = "LogInScreen";
}

<head>
    <title>Log in screen</title>
    <link href="~/Content/LogInScreen.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        <div id="LoginScreen">
            <div id="UserNameDiv">
                <h3 id="UserTag">Username:</h3>
                @Html.TextBoxFor(u => u.UserName, new {@id="UserName", placeholder = "Username", @Class = "form-control" })
                @Html.ValidationMessageFor(u =>u.UserName)
            </div>
            <div id="PasswordDiv">
                <h3 id="PassTag">Password:</h3>
                @Html.PasswordFor(u => u.Password, new {@id="Password", placeholder = "Password", @Class = "form-control" })
                @Html.ValidationMessageFor(u =>u.Password)
            </div>
            <div id="Buttons">
                <input type="submit" value="Log in" class="btn" id="LogInButton"/>
                <input type="button" value="Register" class="btn" id="RegisterButton" onclick="location.href='Register'" />
            </div>
        </div>
    }
</body>