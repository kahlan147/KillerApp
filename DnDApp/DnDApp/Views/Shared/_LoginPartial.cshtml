@using Microsoft.AspNet.Identity
@using DnDApp.Models;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @if(Database.LoggedUser == null){
        <li>@Html.ActionLink("Register", "Register", "LogIn", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "LoginScreen", "LogIn", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        }
        else{
        <li>@Html.ActionLink("Logout", "Logout", "LogIn", routeValues: null, htmlAttributes: new{ id="loginLink"})</li>
        }   
    </ul>
}
