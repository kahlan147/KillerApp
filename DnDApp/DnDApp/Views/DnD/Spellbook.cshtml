
@model DnDApp.Models.Spellbook

@{
    ViewBag.Title = "Spellbook";
    var AllSpells = @ViewBag.AllSpells;
    var MySpellBook = @ViewBag.MySpellBook;
}

<link href="~/Content/Inventory.css" rel="stylesheet" />

<div>
    @using (Html.BeginForm())
    {
        <img src="~/Resources/Scroll2.jpg" id="Img_scroll">
        <div id="Inventory">
            @Html.ListBoxFor(u => u.SelectedSpells, new MultiSelectList(MySpellBook.MySpells, "SpellName", "Showable"), new { @Id = "MyInventoryList", @Class = "resizetest", size = 40 })
        </div>
        <div id="AllItems">
            <h3>All spells</h3>
            @Html.ListBoxFor(u => u.ToBeAddedSpells, new MultiSelectList(AllSpells, "SpellName", "SpellName"), new{@Id="AllItemsBox", @Class="resizetest", size=50})
            <input type="submit" name="command" value="More info" id="MoreInfoButton"/>
            <input type="submit" name="command" value="Add" id="AddButton"/>
        </div>
        <div id="Buttons">
            <input type="submit" name="command" value="More Info" class="MyInvBt" id="btRemove" />
            <input type="submit" name="command" value="Remove" class="MyInvBt" id="Dec20" />
            <input type="submit" name="command" value="Prepare" class="MyInvBt" id="Inc10" />
            <input type="submit" name="command" value="Unprepare" class="MyInvBt" id="Inc20" />
        </div>
    }
</div>

